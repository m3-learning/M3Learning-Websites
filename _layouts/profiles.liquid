---
layout: page
---
<div class="post">
  <article>
    {% if page.profiles %}
      {% for profile in page.profiles %}
        <hr>
        <div class="profile float-{% if profile.align == 'left' %}left{% else %}right{% endif %}" onmouseover="showContactInfo(this)" onmouseout="hideContactInfo(this)">
          {% if profile.image %}
            {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
            {% if profile.image_circular %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded-circle' %}
            {% else %}
              {% assign profile_image_class = 'img-fluid z-depth-1 rounded' %}
            {% endif %}
            {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 576px) 30vw, 95vw"{% endcapture %}
            {% include figure.liquid loading="eager" path=profile_image_path class=profile_image_class sizes=sizes alt=profile.image %}
          {% endif %}
          {% if profile.more_info %}
            <div class="more-info">{{ profile.more_info }}</div>
          {% endif %}
          <div class="contact-info" style="display: none;">
            {% if profile.social_media %}
              <div class="social-media">Social Media: {{ profile.social_media }}</div>
            {% endif %}
            {% if profile.email %}
              <div class="email">Email: {{ profile.email }}</div>
            {% endif %}
            {% if profile.name %}
              <div class="name">Name: {{ profile.name }}</div>
            {% endif %}
          </div>
        </div>

        <div class="clearfix">
          {% if profile.content %}
            {% capture profile_content %}{% include_relative {{ profile.content }} %}{% endcapture %}
            {{ profile_content | markdownify }}
          {% else %}
            {{ content }}
          {% endif %}
        </div>
      {% endfor %}
    {% endif %}
  </article>
</div>

<script>
function showContactInfo(profileElement) {
  const contactInfo = profileElement.querySelector('.contact-info');
  if (contactInfo) {
    contactInfo.style.display = 'block';
  }
}

function hideContactInfo(profileElement) {
  const contactInfo = profileElement.querySelector('.contact-info');
  if (contactInfo) {
    contactInfo.style.display = 'none';
  }
}
</script>