<ul class="card-text font-weight-light list-group list-group-flush">
  {% for entry in site.data.cv %}
    {% if entry.type == 'workshops' %}
      {% for content in entry.contents %}
        <li class="list-group-item">
          <div class="row">
            {% if content.date %}
              <div class="col-xs-2 cl-sm-2 col-md-2" style="width: 75px; text-align: left;">
                <table class="table-cv">
                  <tbody>
                    <tr>
                      <td>
                        <span class="badge font-weight-bold danger-color-dark text-uppercase align-left" style="min-width: 75px;">
                          {{- content.date -}}
                        </span>
                      </td>
                    </tr>
                    {% if content.location %}
                      <tr>
                        <td>
                          <p class="location" style="display: flex; align-items: center; margin: 0;">
                            <i class="fa-solid fa-location-dot iconlocation" style="margin-right: 5px;"></i>
                            {{ content.location }}
                          </p>
                        </td>
                      </tr>
                    {% endif %}
                  </tbody>
                </table>
              </div>
            {% endif %}
            <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0" style="text-align: left;">
              {% if content.workshop_name %}
                <h6 class="title font-weight-bold ml-1 ml-md-4">{{ content.workshop_name }}</h6>
              {% endif %}
              <table class="table-cv ml-1 ml-md-4 institution" style="text-align: left;">
                <tbody>
                  {% if content.funding_agency %}
                    <tr>
                      <td style="vertical-align: top;" class="institution">
                        <p style="display: flex; align-items: center; margin: 0;">
                          <i class="fa-solid fa-building-columns iconinstitution" style="margin-right: 5px;"></i>
                          {{ content.funding_agency }}
                        </p>
                      </td>
                    </tr>
                  {% endif %}
                  {% if content.description %}
                    <tr>
                      <td colspan="2" class="description">{{ content.description }}</td>
                    </tr>
                  {% endif %}
                </tbody>
              </table>
            </div>
          </div>
        </li>
      {% endfor %}
    {% endif %}
  {% endfor %}
</ul>
