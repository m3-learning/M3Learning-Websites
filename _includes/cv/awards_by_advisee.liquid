<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in entry.contents %}
    <li class="list-group-item">
      <div class="row">
        <!-- Display Year as Badge -->
        {% if content.year %}
          <div class="col-xs-2 col-sm-2 col-md-2 text-center" style="width: 75px">
            <table class="table-cv">
              <tbody>
                <tr>
                  <td>
                    <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                      {{ content.year }}
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        {% endif %}

        <!-- Display Content Details -->
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          {% if content.recipient %}
            <h6 class="title font-weight-bold ml-1 ml-md-4">{{ content.recipient }}</h6>
          {% endif %}
          {% if content.award %}
            <p class="award font-weight-bold ml-1 ml-md-4">
              <i class="fa-solid fa-award iconaward"></i> {{ content.award }}
            </p>
          {% endif %}
          {% if content.event %}
            <p class="event ml-1 ml-md-4">
              <i class="fa-regular fa-calendar iconcalendar"></i> {{ content.event }}
            </p>
          {% endif %}
          {% if content.institution %}
            <p class="institution ml-1 ml-md-4">
              <i class="fa-solid fa-building-columns iconinstitution"></i> {{ content.institution }}
            </p>
          {% endif %}
          {% if content.description %}
            <p class="description ml-1 ml-md-4">{{ content.description }}</p>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
